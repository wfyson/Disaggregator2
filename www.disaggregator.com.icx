<!-- 
	REMEMBER TO CLEAR THE CACHED CONFIG FROM systemp/config/ AFTER EDITING THIS FILE!
 -->
 
	<setting>
		<key>dynamic_class_loading</key>
		<value>0</value>
	</setting>
 
	<setting>
		<key>dataDir</key>
		<value>sites/disaggregator/app/</value>
	</setting>
	
	<setting>
		<key>errorDir</key>
		<value>sites/disaggregator/errors</value>
	</setting>
	
	<setting>
		<key>tauUser_userDir</key>
		<value>sites/disaggregator/users/</value>
	</setting>
	
	<setting>
		<key>tauTemplates</key>
		<value>
			<array>
				<value key=".">sites/disaggregator/template/template.php</value>
			</array>
		</value>
	</setting>
	
	<setting>
            <key>document_dir</key>
            <value>sites/disaggregator/data/documents</value>
        </setting>

	<setting type="merge">
		<key>tauTemplate_dresserOptions</key>
		<value>
			<array>
				<value key="nicenames">1</value>
			</array>
		</value>
	</setting>
	
	
