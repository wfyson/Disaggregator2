<!-- Load custom extensions -->

	<!-- This setting adds a new path the list of extension locations (hence the "merge" in the type attribute) -->
	<setting type="merge">
		<key>tau_moduleDir</key>
		<value>
			<array>
				<value>sites/disaggregator/extensions</value>
			</array>
		</value>
	</setting>
	
	<!-- This setting names a file to load.  All configured extension locations are searched for it. -->
	<setting type="merge">
		<key>tau_modulelist</key>
		<value>
			<array>
				<value>demo.lib.php</value>
			</array>
		</value>
	</setting>
	
	<!-- Database settings -->
        <setting>
                <key>dbhost</key>
                <value>localhost</value>
        </setting>

        <setting>
                <key>dbuser</key>
                <value>disaggregator</value>
        </setting>

        <setting>
                <key>dbpass</key>
                <value>password</value>
        </setting>

        <setting>
                <key>dbname</key>
                <value>disaggregatordb</value>
        </setting>

<!-- Set up authentication using our custom class -->
<setting>
        <key>tauUser_userClass</key>
        <value>DisaggregatorPerson</value>
</setting>

<setting>
        <key>tauUser_errorLoginRequired</key>
        <value>errors/login.php</value>
</setting>

<setting>
        <key>tauUser_errorBadAuth</key>
        <value>errors/badlogin.php</value>
</setting>

<setting>
    <key>tauUser_authProvider</key>
    <value><array><value>tauAuthLoginPage</value><value>tauCookieAuth</value></array></value>
</setting>

<setting>
    <key>tauUser_authObserver</key>
    <value><array><value>tauCookieAuth</value></array></value>
</setting>

<setting type="merge">
        <key>moduledir</key>
        <value>
                <array>
                        <value>sites/disaggregator/extensions</value>
                        <value>extensions/packages</value>
                </array>
        </value>
</setting>

<setting type="merge">
        <key>modulelist</key>
        <value>
                <array>
                        <value>setup.php</value>
                        <value>db.lib.php</value>
                </array>
        </value>
</setting>


</config>
